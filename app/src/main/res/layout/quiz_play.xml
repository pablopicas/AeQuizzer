<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_13sdp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">

        <ProgressBar
            android:id="@+id/seekBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progressDrawable="@drawable/costom_seekbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lufgamedium"
            android:text="20 seconds"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/seekBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="@dimen/_74sdp"
                android:layout_height="@dimen/_34sdp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#627FFF"
                android:elevation="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="22/22"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center"
                    android:fontFamily="@font/lufgamedium"
                    android:textColor="#fff"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:backgroundTint="#E3E8FE"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                android:orientation="vertical"
                app:cardCornerRadius="17dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:fontFamily="@font/lufgamedium"
                        android:text="A paradox is a logically self-contradictory statement or a statement that runs contrary to one's expectation. It is a statement that, despite apparently valid reasoning from true premises, leads to a seemingly self-contradictory or a logically unacceptable conclusion."
                        android:textColor="#9390A1"
                        android:textSize="@dimen/_11sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="14dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:text="Answer 1"
        android:background="@drawable/answer_right"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_vertical"
        android:textColor="#151515"
        android:paddingStart="20dp"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/helvetica_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:text="Answer 1"
        android:background="@drawable/stroke"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_vertical"
        android:textColor="#151515"
        android:paddingStart="20dp"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/helvetica_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:text="Answer 1"
        android:background="@drawable/answer_wrong"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_vertical"
        android:textColor="#151515"
        android:paddingStart="20dp"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/helvetica_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:text="Answer 1"
        android:background="@drawable/stroke"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_vertical"
        android:textColor="#151515"
        android:paddingStart="20dp"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/helvetica_bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_36sdp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="#627FFF"
        android:outlineSpotShadowColor="#9F627FFF"
        app:cardElevation="@dimen/_20sdp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Next"
            android:textColor="#fff"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/helvetica_bold"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>