<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_20sdp"
        android:outlineSpotShadowColor="#627FFF"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#627FFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lufgamedium"
                android:gravity="center"
                android:text="Available Coins"
                android:textColor="#fff"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/bigcoin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/lufgamedium"
                    android:text="110 coins"
                    android:textColor="#fff"
                    android:textSize="@dimen/_26sdp" />

            </LinearLayout>

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/redeemcoinbg"
                android:fontFamily="@font/lufgamedium"
                android:gravity="center"
                android:padding="8dp"
                android:text="Redeem coin"
                android:textColor="#fff"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lufgamedium"
        android:gravity="center"
        android:text="Available Coins"
        android:textColor="#9390A1"
        android:textSize="@dimen/_16sdp" />

    <ImageView
        android:layout_width="@dimen/_140sdp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:background="#9390A1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/redeem_Coin_History"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>