<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lufgamedium"
            android:gravity="center"
            android:text="Available Coins"
            android:textColor="#666464"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="#666464" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/bigcoin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/lufgamedium"
                android:text="110 coins"
                android:textColor="#000"
                android:textSize="@dimen/_26sdp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:outlineSpotShadowColor="#627FFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#627FFF"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/editext_bg"
                    android:hint="Enter Amount.."
                    android:paddingStart="15dp"
                    android:textColorHint="#C5D4FF"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lufgamedium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="1 Coin = 1 Rupee"
                        android:textColor="#fff"
                        android:textSize="@dimen/_16sdp" />

                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/redeemcoinbg"
                    android:fontFamily="@font/lufgamedium"
                    android:gravity="center"
                    android:padding="11dp"
                    android:text="Add coin"
                    android:textColor="#fff" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lufgamedium"
            android:gravity="center"
            android:text="Added Coins"
            android:textColor="#9390A1"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="#9390A1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/redeem_Coin_History"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>